{
	"malva": {
		"useTabs": true,
		"quotes": "alwaysSingle",
		"hexCase": "lower",
		"hexColorLength": "long",
		"formatComments": true,
		"declarationOrder": "smacss",
		"keyframeSelectorNotation": "percentage"
	},
	"markup": {
		"useTabs": true,
		"quotes": "double",
		"formatComments": true,
		"scriptIndent": false,
		"styleIndent": false,
		"closingTagLineBreakForEmpty": "always"
	},
	"excludes": [
		"**/node_modules"
	],
	"plugins": [
		"https://plugins.dprint.dev/g-plane/malva-v0.11.1.wasm",
		"https://plugins.dprint.dev/g-plane/markup_fmt-v0.18.0.wasm"
	]
}
